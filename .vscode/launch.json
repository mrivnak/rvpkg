    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Rust Launch",
            "preLaunchTask": "cargo build",
            "program": "${workspaceFolder}/target/debug/rvpkg",
            "args": [],
            "cwd": "${workspaceFolder}",
            "stopOnEntry": false,
            "sourceLanguages": ["rust"],
        },
        {
          "name": "(Windows) Rust Launch",
          "type": "cppvsdbg",
          "request": "launch",
          "preLaunchTask": "cargo build",
          "program": "${workspaceFolder}/target/debug/rvpkg.exe",
          "stopAtEntry": false,
          "cwd": "${workspaceFolder}",
          "symbolSearchPath": "https://msdl.microsoft.com/download/symbols",
          "environment": []
        }
    ]
}